<% include partials/header %>

<div class="content-ctr">
	<div class="header-content-ctr">
		<div class="header-content">

			<div class="row container mr-auto">
				<div class="par">
					<form action="/login" method="POST" class="ui form">
					  <div class="field">
    					<label><i class="user icon"></i> Username</label>
    					<input type="text" name="username" placeholder="Username">
  					</div>
  					<div class="field">
    					<label><i class="key icon"></i> Password</label>
    					<input type="password" name="password" placeholder="Password">
  					</div>
  					<button class="ui button btn-block" name="login" type="submit"><i class="sign-in icon"></i> SIGN-IN</button>
					</form>
				</div>
			</div>

			<div class="jumbotron auth">

		      <div class=" mb-5 text-white pb-2 m-auto">

		        <div class="col-lg-12 ">
							<div class="tooltip2">
								<span class="tooltiptext2">	Sign in with Google..</span>
		          <a href="/auth/google" class="btn btn-block btn-social  btn-google h-shadow">
		          <span class="fab fa-google"></span>	Sign in with Google

		          </a>
							</div>
						</div>

		        <div class="col-lg-12">
							<div class="tooltip2">
								<span class="tooltiptext2">	Sign in with Github..</span>
		          <a href="/auth/github" class="btn btn-block btn-social btn-github">
								<span class="fab fa-github "></span> Sign in with Github
		          </a>
							</div>
		        </div>

		        <div class="col-lg-12">
							<div class="tooltip2">
								<span class="tooltiptext2">	Sign in with Facebook..</span>
		          <a href="/auth/facebook"  class="btn btn-block btn-social btn-facebook">
		            <span class="fab fa-facebook"></span> Sign in with Facebook
		          </a>
							</div>
		        </div>
		      </div>

		</div>



		</div>
	</div>
	<div class="main-content-ctr">
		<div class="main-content">
			<div class="par">

				<div class="container mr-auto">
					<div class="par">
						<form action="/signup" method="POST" class="ui form">
						  <div class="field">
	    					<label><i class="user icon"></i> Username</label>
	    					<input type="text" name="username" placeholder="Username">
	  					</div>
	  					<div class="field">
	    					<label><i class="key icon"></i> Password</label>
	    					<input type="password" name="password" placeholder="Password">
	  					</div>
							<div class="field">
							   <label><i class="envelope icon"></i> E-mail</label>
							   <input type="email" name="email" placeholder="email@gmail.com">
							</div>
	  					<button class="ui button btn-block" name="signup" type="submit"><i class="user plus icon"></i> SIGN-UP</button>
						</form>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

